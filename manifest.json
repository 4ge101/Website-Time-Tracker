{
  "manifest_version": 3,
  "name": "Website Time Tracker",
  "version": "1.5",
  "description": "Track and visualize time spent on websites with categories and website blocking",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "webNavigation",
    "alarms",
    "webRequest",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}